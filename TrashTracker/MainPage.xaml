<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrashTracker.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="80">
            <Image
                Source="trash_collector.png"
                HeightRequest="300"
                Aspect="AspectFit"
                SemanticProperties.Description="trash can" />

            <Label
                Text="Welcome to the &#10;Trash Tracker"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
