<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TrashTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TrashTracker"
    xmlns:view="clr-namespace:TrashTracker.View"
    Shell.FlyoutBehavior="Disabled"
    Title="TrashTracker">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Icon="fa_house_solid.png" />

        <ShellContent
            Title="Map"
            ContentTemplate="{DataTemplate view:MapPageView}"
            Route="MapPageView"
            Icon="fa_earth_americas_solid.png" />

        <ShellContent
            Title="Stats"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Icon="fa_chart_simple_solid.png" />

        <ShellContent
            Title="Events"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Icon="fa_calendar_days_regular.png" />

        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Icon="fa_user_solid.png"/>

    </TabBar>


</Shell>
